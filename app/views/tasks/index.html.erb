<h1> My tasks </h1>
<% @tasks.each do |task| %>
<ul>
  <li><%= link_to task.title, task_path(task) %> </li>
  <input type="checkbox" value="" <%= task.completed ? "checked" : "" %>>
  <li><%= task.details %></li>
  <%= link_to "Delete",
    task_path(task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</ul>
<% end %>

<%= link_to "create", tasks_new_path %>
